<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Booked | Cheap Book Rental</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" media="screen" href="/assets/styles/style.css" />
</head>
<body>

  <!-- NavBar -->
	<%- include('partials/nav',{cartCount:user.cart.length}); %>


<!-- Search Bar-->
	<div class="text-center">
		<form class="text-center" method="GET" action="/search">
			<input class="search-bar-input" name="q" type="text" placeholder="Find a book"/>
			<i id="fa-search" class="fas fa-search"></i>
		</form>
  </div>
  <hr class="m-3">


  <div class="cat-list text-center mb-4 mt-4">
    <a href="/cat/fiction">
    <span>Fiction</span>
    </a>
    <a href="/cat/true-story">
    <span>True-Story</span>
    </a>
    <a href="/cat/romance">
    <span>Mystery</span>
    </a>
    <a href="/cat/motivation">
    <span>Motivation</span>
    </a>
  </div>

  <div class="filter-dropdown input-group mb-3">
      <select class="custom-select" id="inputGroupSelect02">
        <option selected>Sort</option>
        <option value="price">Price</option>
        <option value="condition">Condition</option>
      </select>
  </div>

  <p class="result-count text-center"><%=books.length%> results</p>

  <div class="result-grid">
    <%books.forEach(function(book){%>
      <div class="book-card">
          <a href="/book/<%=book._id%>">
            <img src="https://picsum.photos/300/500/?random"/>
            <div>
              <h4><%=book.title%></h4>
              <h6><%=book.author%></h6>
              <p class="text-capitalize">
                <%book.cat.forEach(function(cat){%>
                  <%=cat%> |
                <%})%>
              </p>
              <h3>Ksh.<%=book.price%></h3>
            </div>
          </a>
        </div>
    <%})%>
    <div class="book-card-loading">
        <img src="https://placeholdit.imgix.net/~text?txtsize=14&bg=d0d0d0&txt=&w=450&h=450"/>
        <div>
          <h4>The Outlander</h4>
          <h6>Phillip Comman</h6>
          <p>Action | Drama | True-Story</p>
          <h3>Ksh.755</h3>
        </div>
    </div>
    <a href="#">
      <div class="load-more text-center">
        Load More
      </div>
    </a>
  </div>
  <!-- FOOTER-->	
  <%- include('partials/footer',{titles:relatedTitles});%>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
	<script src="/assets/scripts/app.js"></script>
</body>
</html>