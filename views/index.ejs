<body>
	<!-- NavBar -->
	<% include partials/nav.ejs %>


	<!-- Search BAr-->
	<div class="search-bar">
			<form method="GET" action="/search">
				<input class="search-bar-input" name="q" type="text" placeholder="Find a book"/>
				<i class="fas fa-search"></i>
			</form>
	</div>

	<a href="#"><p class="landing-desc text-center mt-5 mb-3">Reading made Cheap</p></a>
	<p class="text-center mb-2">Choose a category.</p>
	<hr class="m-4">

	<!-- Category Grid -->
	<div class="text-center mt-5">
		<div class="card text-center cat-cards">
				<a href="/cat/fiction" class="mt-5 btn">
					<div class="card-body">
						Fiction
					</div>
				</a>
			</div>
			<div class="card text-center cat-cards">
				<a href="/cat/cuisine" class="mt-5 btn">
					<div class="card-body">
						Cuisine
					</div>
				</a>
			</div>
			<div class="card text-center cat-cards">
				<a href="/cat/motivational" class="mt-5 btn">
					<div class="card-body">
						Motivational
					</div>
				</a>
			</div>
			<div class="card text-center cat-cards">
				<a href="/cat/education" class="mt-5 btn">
					<div class="card-body">
						Education
					</div>
				</a>
			</div>
	</div>
	<!-- Category Grid -->


	<!-- FOOTER-->	
