<!DOCTYPE html>
<html>
<head>
		<%-include('../partials/adminHead',{pageTitle:'Edit Coupon | Admin'})%>
</head>
<body>

	<%-include('../partials/adminNav')%>
	<h2 class="text-center m-4 text-capitalize"><%=coupon.name%></h2>
	
	<div class="bookedit-container mb-5">
		<form method="POST" action="/admin/couponedit/<%=coupon._id%>">
			<div class="form-group row">
				<label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
				<div class="col-sm-10">
					<input name="name" type="text" class="form-control" id="inputEmail3" placeholder="Coupon name" value="<%=coupon.name%>" required>
				</div>
			</div>
			<div class="form-group row">
				<label for="inputPassword3" class="col-sm-2 col-form-label">Value</label>
				<div class="col-sm-10">
					<input name="value" max=1 step="any" type="number" type="number" class="form-control" id="inputPassword3" placeholder="Discount" value="<%=coupon.value%>" required>
				</div>
			</div>
			<div class="form-group row">
				<label for="inputPassword3" class="col-sm-2 col-form-label">Status</label>
				<div class="col-sm-10">
						<select name="status" class="custom-select mb-4" >
								<% let options=[1,0];%>
								<% options.forEach(function(option,i){ %>
                                    <% let selected = (coupon.status === option ) ? "selected" : ""; %>
                                    <% let value = (option === 1 ) ? "active" : "inactive"; %>
									<option value="<%=option%>" <%=selected%> ><%=value%> </option>
								<% }) %>
							</select>
				</div>
			</div>
			<button type="submit" class="btn btn-primary button btn-block">Update</button>
		</form>
	</div>
	<%-include('../partials/adminFooter')%>
</body>
</html>

