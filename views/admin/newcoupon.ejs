<!DOCTYPE html>
<html>
<head>
		<%-include('../partials/adminHead',{pageTitle:'New Coupon | Admin'})%>
</head>
<body>

	<%-include('../partials/adminNav')%></h2>
	<h2 class="text-center m-4 text-capitalize">New Coupon</h2>
	<div class="bookedit-container mb-5">
		<form method="POST" action="/admin/newcoupon">
			<div class="form-group row">
				<label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
				<div class="col-sm-10">
					<input name="name" type="text" class="form-control" id="inputEmail3" placeholder="Coupon name" required>
				</div>
			</div>
			<div class="form-group row">
				<label for="inputPassword3" class="col-sm-2 col-form-label">Value</label>
				<div class="col-sm-10">
					<input name="value" max=1 step="any" type="number" class="form-control" id="inputPassword3" placeholder="value" required>
				</div>
			</div>
			<button type="submit" class="btn btn-primary button btn-block">Submit</button>
		</form>
	</div>
	<%-include('../partials/adminFooter',{user:user})%>
</body>
