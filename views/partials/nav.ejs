<nav class="navbar sticky-top navbar-expand-lg">
    <a class="ml-2 navbar-brand" href="/">bookworm</a>
    <form id="nav-form" class="ml-2 d-none " method="GET" action="/search">
        <input id="searchbar" class="search-bar-input-nav" name="q" type="text" placeholder="Search"/>
    </form>
    <div>
			<div class="nav-link" href="/cart"> 
					<a class='mr-3' href="/profile">
							<i class="fas fa-user-alt nav-icon"></i>
					</a>
					<a href="/cart">
							<i class="fas fa-shopping-cart nav-icon"></i>
					</a>
			</div>
			<%if(cartCount > 0){%>
				<span id="cart-item-count"><%=cartCount%></span>
			<%}%>         
			</a>
    </div>
</nav>
<div class="d-none" id="search-suggestion">
		<p id="sug-tip" class="ml-3 mt-2"> Suggested titles:</p>
		<p class="mr-4 mt-2" id="sug-close">close</p>

				<%suggestions.forEach(function(book){%>
					<div class="book-card-sug">
					<a href="/book/<%=book._id%>">
						<div class='book-card-div-sug'>
							<h4><%=book.title%></h4>
							<h6><%=book.author%></h6>
							<h3>Ksh.<%=book.price%></h3>
						</div>
					</a>
				</div>
				<%})%>

</div>
