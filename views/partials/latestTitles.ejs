<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner latest-slider">
      <%titles.forEach(function(book,i){%>
        <%if(i == 0){%>
          <div class="carousel-item active">
        <%}else{%>
          <div class="carousel-item">
        <%}%>
            <div class="latest-title">
                <%if(book.gallery){%>
                  <img src="/public/bookcovers/<%=book.gallery[0]%>" alt="">
                <%}%>
                <div>
                  <h4><%=book.title%></h4>
                  <h6><%=book.author%></h6>
                  <p><%book.cat.forEach(function(category){%>
                    <%=category%> |
                  <%})%>
                  </p>
                  <a href="/book/<%=book._id%>"><span>view</span></a> 
                </div>
              </div>
      </div>
      <%})%>
    </div>
  </div>